{
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module",
		"project": "./tsconfig.json"
	},
	"ignorePatterns": ["*.spec.ts"],
	"plugins": ["@typescript-eslint"],
	"rules": {
		"no-console": [2, { "allow": [ "warn", "error"] }],
		"no-debugger": 2,
		"@typescript-eslint/array-type": [2, { "default": "array" }],
		"@typescript-eslint/await-thenable": 2,
		"@typescript-eslint/ban-types": [1, { "types": { "String": { "fixWith": "string" } } }],
		"@typescript-eslint/ban-ts-ignore": 2,
		"@typescript-eslint/class-name-casing": 2,
		"@typescript-eslint/consistent-type-assertions": [2, { "assertionStyle": "as", "objectLiteralTypeAssertions": "allow" }],
		"@typescript-eslint/interface-name-prefix": [2, "never"],
		"@typescript-eslint/member-delimiter-style": [2, {
			"multiline": { "delimiter": "comma", "requireLast": true },
			"singleline": { "delimiter": "comma", "requireLast": false }
		}],
		"@typescript-eslint/no-array-constructor": 2,
		"@typescript-eslint/no-empty-interface": 2,
		"@typescript-eslint/no-explicit-any": "off",
		"@typescript-eslint/no-extraneous-class": 2,
		"@typescript-eslint/no-for-in-array": 2,
		"@typescript-eslint/no-inferrable-types": 2,
		"@typescript-eslint/no-misused-new": 2,
		"@typescript-eslint/no-namespace": "off",
		"@typescript-eslint/no-non-null-assertion": 2,
		"@typescript-eslint/no-object-literal-type-assertion": "off",
		"@typescript-eslint/no-parameter-properties": "off",
		"@typescript-eslint/no-require-imports": 2,
		"@typescript-eslint/no-this-alias": [2, { "allowDestructuring": true }],
		"@typescript-eslint/no-unnecessary-qualifier": 2,
		"@typescript-eslint/no-unnecessary-type-assertion": 2,
		"@typescript-eslint/no-useless-constructor": 2,
		"@typescript-eslint/no-var-requires": 2,
		"@typescript-eslint/prefer-function-type": 2,
		"@typescript-eslint/restrict-plus-operands": 2,
		"@typescript-eslint/triple-slash-reference": 2,
		"@typescript-eslint/type-annotation-spacing": 2,
		"@typescript-eslint/unified-signatures": 2,
		"@typescript-eslint/unbound-method": 2,
		"array-bracket-spacing": [2, "never" ],
		"arrow-spacing": [2, { "before": true, "after": true }],
		"block-spacing": [2, "always"],
		"brace-style": [2, "stroustrup", { "allowSingleLine": true }],
		"comma-dangle": [1, "always-multiline"],
		"comma-spacing": 2,
		"comma-style": 2,
		"computed-property-spacing": 2,
		"curly": [2, "multi"],
		"dot-location": [2, "property"],
		"dot-notation": 2,
		"eol-last": 2,
		"eqeqeq": [1, "smart"],
		"function-paren-newline": 2,
		"indent": "off",
		"@typescript-eslint/indent": [2, "tab", { "SwitchCase": 1 }],
		"implicit-arrow-linebreak": 2,
		"key-spacing": [2, { "beforeColon": false, "afterColon": true }],
		"keyword-spacing": 2,
		"linebreak-style": 2,
		"new-parens": 2,
		"no-alert": 2,
		"no-bitwise": 2,
		"no-constant-condition": 2,
		"no-dupe-args": 2,
		"no-dupe-keys": 2,
		"no-duplicate-case": 2,
		"no-empty": 2,
		"no-empty-character-class": 2,
		"no-empty-pattern": 2,
		"no-eval": 2,
		"no-ex-assign": 2,
		"no-extend-native": 2,
		"no-extra-bind": 2,
		"no-extra-boolean-cast": 2,
		"no-extra-parens": "off",
		"@typescript-eslint/no-extra-parens": [2, "all", { "nestedBinaryExpressions": false }],
		"no-floating-decimal": 2,
		"no-func-assign": 2,
		"no-global-assign": "error",
		"no-implicit-coercion": [2, { "allow": ["!!"] }],
		"no-implied-eval": 2,
		"no-lone-blocks": 2,
		"no-loop-func": 2,
		"no-irregular-whitespace": [2, { "skipComments": true, "skipRegExps": true, "skipTemplates": true }],
		"no-lonely-if": 2,
		"no-mixed-spaces-and-tabs": ["error", "smart-tabs"],
		"no-multi-spaces": 2,
		"no-multi-str": 2,
		"no-multiple-empty-lines": 2,
		"no-new": 2,
		"no-new-func": 2,
		"no-new-object": 2,
		"no-new-require": 2,
		"no-new-wrappers": 2,
		"no-octal": 2,
		"no-obj-calls": 2,
		"no-param-reassign": 2,
		"no-redeclare": 2,
		"no-restricted-syntax": ["error", "SequenceExpression"],
		"no-return-assign": 2,
		"no-return-await": 2,
		"no-self-compare": 2,
		"no-shadow-restricted-names": 2,
		"no-spaced-func": 2,
		"no-sparse-arrays": 2,
		"no-throw-literal": 2,
		"no-trailing-spaces": 2,
		"no-undef": "off",
		"no-undef-init": "off",
		"no-unexpected-multiline": 2,
		"no-unmodified-loop-condition": 2,
		"no-unneeded-ternary": 2,
		"no-unreachable": 2,
		"no-unsafe-negation": 2,
		"no-unused-vars": "off",
		"no-useless-call": 2,
		"no-useless-concat": 2,
		"no-var": 2,
		"no-void": 2,
		"no-warning-comments": 1,
		"no-whitespace-before-property": 2,
		"object-curly-spacing": [2, "always"],
		"object-shorthand": [2, "always"],
		"one-var": [2, "never"],
		"operator-linebreak": [2, "before", {
			"overrides": {
				"=": "after",
				"+=": "after",
				"-=": "after",
				"*=": "after",
				"/=": "after"
			}
		}],
		"padded-blocks": [2, "never"],
		"prefer-arrow-callback": 2,
		"prefer-const": 2,
		"prefer-template": 2,
		"prefer-spread": 2,
		"prefer-rest-params": 2,
		"quotes": [2, "single", "avoid-escape"],
		"radix": [2, "as-needed"],
		"require-await": 2,
		"require-yield": 2,
		"semi": "off",
		"@typescript-eslint/semi": [2, "never"],
		"space-before-blocks": 2,
		"space-before-function-paren": ["error", {
			"anonymous": "never",
			"named": "never",
			"asyncArrow": "always"
		}],
		"space-in-parens": [2, "never"],
		"space-infix-ops": 2,
		"space-unary-ops": [2, { "words": true, "nonwords": false }],
		"switch-colon-spacing": [2, { "after": true, "before": false }],
		"use-isnan": 2,
		"yoda": 2
	}
}
