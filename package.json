{
	"name": "project-f",
	"version": "1.0.0",
	"description": "",
	"scripts": {
		"dev": "ts-node lib/templating/wolf.grammar.ts",
		"todos": "tsc -w -p examples/todos/tsconfig.json",
		"dom": "tsc -w -p lib/dom/tsconfig.json",
		"lab": "ts-node lab/main.ts",
		"macros": "rm -rf lab/macros/transformed/ && ts-node ./lab/macros/transformer.ts && ttsc -P ./lab/macros/tsconfig.json",
		"macros:dev": "ts-node lab/macros/index.ts",
		"kreia:wolf": "kreia ./lib/templating/wolf.grammar.peg ./lib/templating/wolf.grammar.staging.ts && eslint --fix --ext .ts lib/templating/wolf.grammar.staging.ts",

		"test": "mocha lib/**/*.spec.ts",
		"coverage": "nyc npm run test",
		"test:examples": "mocha examples/index.spec.ts",
		"test:reactivity": "mocha lib/reactivity/**/*.spec.ts",
		"test:dom": "mocha -r jsdom-global/register lib/dom/**/*.spec.ts",
		"test:codegen": "mocha lib/templating/codegen.spec.ts",
		"test:integration": "mocha -r jsdom-global/register lib/templating/integration.grammar.codegen.spec.ts",
		"coverage:dev": "nyc npm run test:dev",

		"build": "npm run clean && tsc -p tsconfig.build.json",
		"ts:ast": "ts-creator lab/_generate.from.ts --use-tabs true --trailing-comma 'all' -o lab/_generate.to.ts",
		"clean": "rm -rf dist",
		"lint": "eslint --fix --ext .ts lib/dom/",
		"preversion": "npm test && npm run build",
		"postversion": "git push origin master && git push origin master --tags && npm publish"
	},
	"devDependencies": {
		"@ts-std/types": "^1.2.0",
		"@types/chai": "^4.2.11",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.13.9",
		"@typescript-eslint/eslint-plugin": "^2.34.0",
		"@typescript-eslint/parser": "^2.34.0",
		"chai": "^4.2.0",
		"eslint": "^6.8.0",
		"jsdom": "^16.2.2",
		"jsdom-global": "^3.0.2",
		"kreia": "^0.4.8",
		"mocha": "^7.2.0",
		"nyc": "^15.1.0",
		"source-map-support": "^0.5.19",
		"ts-creator": "^1.2.5",
		"ts-node": "^8.10.2",
		"ttypescript": "^1.5.10",
		"typescript": "^3.9.3"
	},
	"dependencies": {
		"@ts-std/collections": "^1.1.1",
		"@ts-std/extensions": "^1.3.0",
		"@ts-std/monads": "^1.2.0"
	}
}
